<!DOCTYPE html>
<html>
  <head>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx"
      crossorigin="anonymous"
    />
  </head>
  
  <body>
    <div class="container text-center">
      <div class="row" style="height:800px;">
        <div class="col-sm-8" name="first">
          <form action="" method="get"> 
            <h3>Leave Details</h3>
            <table border="1">
              <tr>
                <th>Fid</th>
                <th></th>
                <th>From</th>
                <th></th>
                <th>To</th>
                <th>Total no.of days</th>
                <th></th>
                <th></th>
                <th> More</th>
              </tr>
            
            <% 
            data.forEach((i)=>{ %>
              <tr>   
                <td><%= i.fid %></td>
                <th></th>
                <td><%= i.fromdate %></td>
                <th></th>
                <td><%= i.todate %></td>
                <td><%= i.total %></td>
                <th></th>
                <%
              var url="/users/updatestatus/"+i.fid;
              var url2="http://localhost:3000/users/adjustment/"+i.lid;
              %> 
                <td><button type="hidden" name="status" value="Accepted" formaction="<%=url%>" style="color: green;">Accept</button></td>
                <td><button type="hidden" name="status" value="Rejected" formaction="<%=url%>" style="color: tomato;">Deny</button></td>
                <td><a href='<%=url2%>' target="second">Adjustment Slots</a></td>
              
              </tr>
            
              <% 
            })
            %>
          </table>
        </form>
        </div>
        <div class="col-sm-4">
          <iframe name="second" style="height:500px;width: 500px;"></iframe>
        </div>
      </div>
    </div>
    
  </body>
</html>